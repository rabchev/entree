{
    "environments": {
        "development": {
            "providers": [
                {
                    "provider": "file-system",
                    "options": {
                        "connStr": "./data"
                    },
                    "collections": [
                        { "name": "blogs", "shecma": "blog" },
                        { "name": "posts", "shecma": "post" },
                        { "name": "users", "shecma": "user" }
                    ]
                },
                {
                    "provider": "mongodb",
                    "options": {
                        "connStr": "mongodb://localhost/entreeTest"
                    },
                    "collections": [
                        { "name": "comments" }
                    ]
                }
            ]
        }
    },
    "schema": {
        "blog": {
            "identifier": "_id"
        },
        "post": {
            "identifier": "_id"
        }
    }
}
