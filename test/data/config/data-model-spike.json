{
    "connections": {
        "fs-default": {
            "provider": "file-system",
            "options": {
                "connStr": "./data"
            }
        },
        "mongo-node:1": {
            "provider": "mongodb",
            "options": {
                "connStr": "mongodb://localhost/node1"
            }
        },
        "mongo-node:2": {
            "provider": "mongodb",
            "options": {
                "connStr": "mongodb://localhost/node2"
            },
            "interceptors": [
                {
                    "interceptor": "log",
                    "disable": false,
                    "options": {
                        "level": "info",
                        "log": {
                            "action": true,
                            "query": true
                        },
                        "actions": ["insert", "update", "delete"]
                    }
                }
            ]
        }
    },
    "collectons": [
        {
            "name": "blogs",
            "schema": "blog",
            "connection": "fs-default",
            "interceptors": [
                {
                    "interceptor": "cache",
                    "disable": false,
                    "options": {
                        "stores": [
                            { "store": "memory", "max": 1000, "ttl": 10 }
                        ],
                        "actions": ["get", "select"]
                    }
                }
            ]
        },
        {
            "name": "comments-mongo-hq",
            "schema": "comment",
            "connecton": "mongo-hq",
            "interceptors": [
                {
                    "interceptor": "log",
                    "disable": true
                }
            ]
        },
        {
            "name": "comments-local",
            "schema": "comment",
            "connecton": "mongo-node:2",
            "interceptors": [
                {
                    "interceptor": "log",
                    "disable": true
                }
            ]
        },
        {
            "name": "posts",
            "schema": "post"
        },
        {
            "name": "users-special",
            "connecton": "mongo-node:1",
            "schema": "user"
        },
        {
            "name": "users-reqular",
            "connecton": "mongo-node:2",
            "schema": "user"
        }
    ],
    "replicas": [
        {
            "name": "comments",
            "collections": ["comments-mongo-hq", "comments-mongo-local"],
            "options": {
                "master": "comments-mongo-hq",
                "wait": "master"
            }
        }
    ],
    "shards": [
        {
            "name": "users",
            "rules": [
                {
                    "condition": {
                        "license": "foo"
                    },
                    "consequence": "users-special"
                },
                {
                    "condition": {
                        "license": "bar"
                    },
                    "consequence": "users-reqular"
                }
            ]
        }
    ],
    "schema": {
        "blog": {
            "__identifier__": "_id",
            "title": "string"
        },
        "post": {
            "__identifier__": "_id"
        },
        "comment": {
            "__identifier__": "_id"
        },
        "user": {
            "__identifier__": "_id"
        }
    }
}
