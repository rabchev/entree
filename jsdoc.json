{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": [ "./lib", "./README.md" ],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "markdown": {
        "parser": "gfm",
        "hardwrap": true
    },
    "opts": {
        "destination": "./docs/",
        "recurse": true
    },
    "templates" : {
        "cleverLinks"     : false,
        "monospaceLinks"  : false,
        "default"         : {
            "outputSourceFiles" : true
        },
        "systemName"      : "Entree",
        "footer"          : "",
        "copyright"       : "Entree Copyright Â© 2012-2013 The contributors to the Entree projects.",
        "navType"         : "vertical",
        "theme"           : "united",
        "linenums"        : true,
        "collapseSymbols" : false,
        "inverseNav"      : true
    }
}
